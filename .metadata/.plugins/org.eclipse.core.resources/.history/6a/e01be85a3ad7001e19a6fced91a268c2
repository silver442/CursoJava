package hernandez.silver.ejerciciospoo;

public class Colegio {
	
	public Colegio(String nombreColegio, int cantidadAlumnos) {
		this.nombreColegio=nombreColegio;
		
		this.cantidadAlumnos=cantidadAlumnos;
		
	}
	
	public void nuevoAlumno(String nombreAlumno, double nota) {
		
		numAlumno=alumnoSiguiente;
		alumnoSiguiente++;
		
		alumnos=new Alumno[cantidadAlumnos];
		
		alumnos[numAlumno] = new Alumno(nombreAlumno, nombreColegio, numAlumno ,nota);
		
	}
	
	// Métodos getter
	
	public String getTodosAlumnos() {
		
		return "";
	}
	
	public String getDatoAlumno(String Alumno) {
		
		return "Nombre Alumno: " + "\nColegio: " + "\nN° Alunmo: " + "\nNota Media: ";
	}
	
	
	private final String nombreColegio;

	private int cantidadAlumnos;
	
	private Alumno[] alumnos;
	
	private int numAlumno;
	
	private static int alumnoSiguiente=1;
}
